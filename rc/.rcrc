LANG=(de_DE.UTF-8)
TERM=(xterm-256color)
path=(/bin /sbin /usr/bin /usr/sbin /usr/local/bin /usr/local/sbin /opt/schily/bin /opt/homebrew/bin $home/.local/bin $home/.roswell/bin $home/.cargo/bin $home/git/plan9port/bin $home/Library/Python/3.9/bin)

CFLAGS=(-I/opt/homebrew/include)
CPPFLAGS=(-I/opt/homebrew/include)
LDFLAGS=(-L/opt/homebrew/lib)

EDITOR=(ed)
if (test -x `(which sam)) {
	VISUAL=(sam)
} else {
	if (test -x `(which nvim)) {
		VISUAL=(nvim)
	} else {
		VISUAL=(vi)
	}
}

## Define the $prompt.
## Grab `pwd` and convert the resulting list into a string:
pwd_list = `pwd
PWD = $"pwd_list

## Set the port with the new variable:
prompt = ('
'$USER':'$PWD'
; ' '')

## Function definitions
## Reload the config file:
fn reload {
	. $home/.rcrc
}

## Update the prompt while cd:
fn cd {
	builtin cd $*
	&& reload
}
